{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/types",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist"],
  "include": ["src", "test"]
}
